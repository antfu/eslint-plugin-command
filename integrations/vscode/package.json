{
  "publisher": "antfu",
  "name": "vscode-eslint-command",
  "displayName": "ESLint Command",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.12.1",
  "description": "",
  "author": "Anthony Fu <anthonyfu117@hotmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/antfu",
  "homepage": "https://github.com/antfu/vscode-eslint-command#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/antfu/vscode-eslint-command"
  },
  "bugs": {
    "url": "https://github.com/antfu/vscode-eslint-command/issues"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/antfu"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "res/icon.png",
  "files": [
    "LICENSE.md",
    "dist/*",
    "res/*"
  ],
  "engines": {
    "vscode": "^1.97.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "eslintCommand.toggleAutoFix",
        "category": "ESLint Command",
        "title": "Toggle `autocomplete.autoFix` configuration"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "ESLint Command configuration",
      "properties": {
        "eslintCommand.languageIds": {
          "type": "array",
          "default": [
            "typescript",
            "javascript"
          ],
          "items": {
            "type": "string"
          }
        },
        "eslintCommand.autocomplete.autoFix": {
          "type": "boolean",
          "default": true,
          "description": "Auto fix code when autocomplete finish",
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "build": "tsdown src/index.ts --external vscode",
    "dev": "nr build --watch --sourcemap",
    "prepare": "nr update",
    "update": "vscode-ext-gen --output src/generated/meta.ts --scope eslintCommand",
    "lint": "eslint .",
    "vscode:prepublish": "nr build",
    "publish": "vsce publish --no-dependencies",
    "pack": "vsce package --no-dependencies",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && nr publish",
    "up": "nlx taze -I major"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@antfu/ni": "catalog:",
    "@antfu/utils": "catalog:",
    "@types/node": "catalog:",
    "@types/vscode": "catalog:",
    "@vscode/vsce": "catalog:",
    "bumpp": "catalog:",
    "eslint": "catalog:",
    "eslint-plugin-command": "workspace:*",
    "esno": "catalog:",
    "lint-staged": "catalog:",
    "pnpm": "catalog:",
    "reactive-vscode": "catalog:",
    "simple-git-hooks": "catalog:",
    "tsdown": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:",
    "vscode-ext-gen": "catalog:"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
